---
import HeroSection from "../components/HeroSection.astro";
import LandingHeader from "../components/LandingHeader.astro";
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Model3 from "../components/Model-3.astro";
import ModelY from "../components/Model-y.astro";
import ModelS from "../components/Model-S.astro";
import ModelX from "../components/Model-X.astro";
import Powerwall from "../components/Powerwall.astro";
---

<Layout title="Tesla Landing">
	<LandingHeader />
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto overflow-x-hidden" style="scroll-behavior: smooth;">
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<Model3 />
		</div>
		<div class="snap-center">
			<ModelY />
		</div>
		<div class="snap-center">
			<ModelS />
		</div>
		<div class="snap-center">
			<ModelX />
		</div>
		<div class="snap-center">
			<Powerwall />
		</div>
	</main>
</Layout>
